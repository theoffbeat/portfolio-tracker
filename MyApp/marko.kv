#:kivy 1.10.1

AddLocationForm:

<AddLocationForm>:
	orientation: "vertical"
	search_input: search_box
	search_results: search_results_list
	BoxLayout:
		height: "40dp"
		size_hint_y: None
		TextInput:
			id: search_box
			size_hint_x: 50
		Button:
			text: "Search"
			size_hint_x: 25
			on_press: root.MyTestMethod()
			on_press: root.UserPrice()
		Button:
			text: "Current Location"
			size_hint_x: 25
	Label:
		id: search_results_list
		text:
		height: "40dp"
		size_hint_y: None
	#in the previous Label, set the height to 40dp
	#need the below label to create another widget to fill the rest of the window
	Label:


	